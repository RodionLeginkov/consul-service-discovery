{
  "version": "1.0.0",
  "compilerOptions": {
    "baseUrl": "./src/main",
    "outDir": "target/es5",
    "strict": true,
    "target": "es5",
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "declaration": true,

    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/test"
  ]
}
